# .env.example - Environment variables for ATProject
# Copy to .env and fill in your values

# =============================================================================
# Django Core
# =============================================================================
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Option 1: Use DATABASE_URL (recommended for Railway/Neon)
DATABASE_URL=postgresql://user:password@localhost:5432/atproject

# Option 2: Individual settings (used if DATABASE_URL not set)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=atproject
# POSTGRES_USER=atproject
# POSTGRES_PASSWORD=your-password

# Database connection tuning
DB_CONN_MAX_AGE=60
DB_HEALTH_CHECKS=True
DB_SSL_REQUIRE=False
DB_CONNECT_TIMEOUT_S=5
DB_APP_NAME=django-app
DB_DISABLE_SERVER_SIDE_CURSORS=False

# Neon-specific (only needed for Neon pooled connections)
# NEON_ENDPOINT_ID=ep-xxx-xxx

# =============================================================================
# Redis / Celery
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# R2 / S3 Media Storage
# =============================================================================
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_S3_ENDPOINT_URL=
R2_CUSTOM_DOMAIN=
R2_SIGNED_URLS=False

# =============================================================================
# Security (Production Only)
# =============================================================================
# DJANGO_SECURE_SSL_REDIRECT=True
# DJANGO_SESSION_COOKIE_SECURE=True
# DJANGO_CSRF_COOKIE_SECURE=True
# DJANGO_SECURE_HSTS_SECONDS=31536000
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# =============================================================================
# Admin
# =============================================================================
# ADMINS=Admin Name:admin@example.com
