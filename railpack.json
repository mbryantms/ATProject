{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": [
    "ffmpeg",
    "nodejs",
    "npm",
    "libjpeg-dev",
    "zlib1g-dev",
    "libfreetype6-dev",
    "liblcms2-dev",
    "libopenjp2-7-dev",
    "libtiff5-dev",
    "libwebp-dev"
  ],
  "steps": {
    "npm-build": {
      "commands": [
        { "cmd": "npm install" },
        { "cmd": "npm run build" }
      ]
    }
  },
  "deploy": {
    "aptPackages": [
      "ffmpeg",
      "libjpeg62-turbo",
      "zlib1g",
      "libfreetype6",
      "liblcms2-2",
      "libopenjp2-7",
      "libtiff6",
      "libwebp7"
    ]
  }
}
